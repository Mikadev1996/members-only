extends layout

block content
  nav
    div.nav-content
      div.nav-text
        p Members Only!
        if (user)
          p Welcome #{user.username}!
          p Test, isMember? #{user.isMember}
    div.nav-links
      div
        a(href='/')
          p Home
        if (!user)
          a(href='/sign-up')
            p Sign Up
          a(href='/sign-in')
            p Sign In
        if (user)
          a(href='/sign-out')
            p Sign Out
      div
        a(href='/apply-member')
          p Become a Member
        a(href='/apply-admin')
          p Become an Admin


  main.content
    h1= title
