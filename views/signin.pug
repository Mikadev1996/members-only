extends layout

block content
    nav
        div.nav-content
            div.nav-links
                div
                    a(href='/')
                        p Home
                    if (!user)
                        a(href='/sign-up')
                            p Sign Up
                        a(href='/sign-in')
                            p Sign In
                    if (user)
                        a(href='/sign-out')
                            p Sign Out
                div
                    if (user && !user.isMember)
                        a(href='/apply-member')
                            p Become a Member
                    if (user && !user.isAdmin)
                        a(href='/apply-admin')
                            p Become an Admin


    main.content
        div.content-display
            form.form-container(method='POST' action='')
                .header
                    h2 Sign In Form
                div#form.form
                    .form-control
                        label(for='username') username:
                        input#username(type='text' name='username' placeholder='username' required='true')
                        i.fas.fa-check-circle
                        i.fas.fa-exclamation-circle
                        small Error Message
                    .form-control
                        label(for='password') Password:
                        input#password(type='password' name='password' placeholder='Password' required='true')
                        i.fas.fa-check-circle
                        i.fas.fa-exclamation-circle
                        small Error Message

                    div
                        button(type='submit') Submit